{
  // Name of the Dev Container (shown in VS Code)
  "name": "Node.js Development Environment",

  // Use an official Node.js Dev Container image (latest LTS)
  "image": "mcr.microsoft.com/devcontainers/javascript-node:20",

  // Features to add inside the container
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:1": {
      "version": "24", // Updated to latest stable Docker version
      "moby": "false",
      "dockerDashComposeVersion": "v2"
    },
    "ghcr.io/devcontainers/features/azure-cli:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/github-cli:1": {
      "version": "latest"
    }
  },

  // List of ports forwarded from the container to the host
  "forwardPorts": [4001, 4002, 4003, 4280],

  // Commands to run after the container is created
  "postCreateCommand": "npm i -g npm@latest pino-pretty fuzz-run && npm install && docker pull node:21-alpine",

  // Tool-specific configurations
  "customizations": {
    "vscode": {
      "extensions": [
        "humao.rest-client",
        "ms-azuretools.vscode-bicep",
        "ms-azuretools.vscode-cosmosdb",
        "ms-azuretools.vscode-azurecontainerapps",
        "EditorConfig.EditorConfig",
        "IronGeek.vscode-env",
        "timonwong.shellcheck"
      ]
    }
  }

  // Set a non-root user for better security (commented out if root access is needed)
  // "remoteUser": "node"
}
